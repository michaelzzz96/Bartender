@model Bartender.Models.Order

@{
    ViewBag.Title = "Order";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
  

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text" })
        <div class="form-group">
            @Html.LabelFor(model => model.CocktailName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderedBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col">
              
                @Html.ValidationMessageFor(model => model.OrderedBy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
   
}

<div>
    @Html.ActionLink("Queue", "Index")
</div>